{
  "name": "front-desk-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testPathPattern=performance",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:performance:e2e": "playwright test tests/e2e/performance.spec.ts",
    "test:components": "jest tests/components",
    "test:all": "npm run test && npm run test:e2e",
    "bundle:analyze": "npm run build:analyze && npx serve out",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:bundle-size": "npm run build && npx bundlesize"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "js-cookie": "^3.0.5",
    "jwt-decode": "^4.0.0",
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.47.0",
    "react-query": "^3.39.3",
    "react-window": "^1.8.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.0.1",
    "axe-core": "^4.10.3",
    "babel-jest": "^30.0.5",
    "compression-webpack-plugin": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "250 kB"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "50 kB"
    }
  ]
}
